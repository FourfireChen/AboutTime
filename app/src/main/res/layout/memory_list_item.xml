<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/memory_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="title"
            android:textSize="35dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/memory_list_item_remark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:text="remark"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="@+id/memory_list_item_name"
            app:layout_constraintEnd_toStartOf="@+id/memory_list_item_days"
            app:layout_constraintStart_toEndOf="@+id/memory_list_item_name" />


        <TextView
            android:id="@+id/memory_list_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017"
            app:layout_constraintStart_toStartOf="@+id/memory_list_item_days"
            app:layout_constraintTop_toBottomOf="@+id/memory_list_item_days" />

        <TextView
            android:id="@+id/memory_list_item_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="206"
            android:textSize="28dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView5"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:text="天"
            android:textSize="28dp"
            app:layout_constraintBottom_toBottomOf="@+id/memory_list_item_days"
            app:layout_constraintEnd_toStartOf="@+id/memory_list_item_before_or_after" />


        <TextView
            android:id="@+id/memory_list_item_before_or_after"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="后"
            app:layout_constraintBottom_toBottomOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>